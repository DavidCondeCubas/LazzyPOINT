<divNewUser>
<h2 class="main-title-page">Modificar Usuario</h2>
<form action="/updateUser" method="post" name="updateUser" enctype="multipart/form-data">
    <table>				
    <tr>
        <td>Password:</td>
        <td><input class="table-input-text-witdh" type="password" name="pass" required/><br></td>
    </tr>
    <tr>
        <td>Nombre Completo:</td>
        <td><input class="table-input-text-witdh" type="text" name="name" value="<%= datos.nombCompl %>" required/><br></td>
    </tr>
    <tr>
        <td>Sexo:</td>
        <td>
                <% if (datos.sexo === "hombre") { %>   
                    <input type="radio" name="sexo" value="hombre"  checked="checked" required>Hombre
                    <input type="radio" name="sexo" value="mujer" required>Mujer
                    <input type="radio" name="sexo" value="otro" required>Otro    
                <% } else { %>
                    <% if (datos.sexo === "mujer") { %>   
                        <input type="radio" name="sexo" value="hombre"  required>Hombre
                        <input type="radio" name="sexo" value="mujer"  checked="checked" required>Mujer
                        <input type="radio" name="sexo" value="otro" required>Otro        
                    <% } else { %>
                        <input type="radio" name="sexo" value="hombre" required>Hombre
                        <input type="radio" name="sexo" value="mujer" required>Mujer
                        <input type="radio" name="sexo" value="otro"  checked="checked" required>Otro
                    <% } %>               
                <% } %>
                
        </td>
    </tr>
    <tr>
        <td>Fecha de Nacimiento:</td>
        <td><input type="text" name="date" value="<%= datos.fecha %>"  placeholder="YYYY-MM-DD" required/><br></td>
    </tr>
    <tr>
        <td>Selecciona Avatar:</td>
        <td><input name="file" type="file" size="2" value = "/uploads/<%= datos.foto %>" required/></td>
    </tr> 

    <tr>
        <td class="table-align-center" colspan="2"><input type="submit" value="Conectar"/></td>
        
    </tr>
</table>
</form>
</divNewUser>